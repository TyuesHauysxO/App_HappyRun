<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_55"
        android:src="@drawable/user_img" />

    <TextView
        android:id="@+id/user_name"
        android:textSize="@dimen/dp_20"
        android:textColor="#4F94CD"
        android:gravity="center"
        android:singleLine="true"
        android:layout_toEndOf="@id/img_user"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_alignBottom="@id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60" />

    <View
        android:id="@+id/divided_line1"
        android:layout_below="@id/img_user"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:background="#CCCCCC"/>

    <TextView
        android:id="@+id/mine_change_pwd"
        android:text="修改密码"
        android:textSize="@dimen/dp_14"
        android:textColor="@drawable/textview_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/divided_line1"
        android:layout_marginTop="0dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/divided_line2"
        android:layout_below="@id/mine_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#000"/>

    <TextView
        android:id="@+id/mine_about"
        android:text="关于"
        android:textSize="@dimen/dp_14"
        android:textColor="@drawable/textview_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/divided_line2"
        android:layout_marginTop="0dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/divided_line3"
        android:layout_below="@id/mine_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#000"/>

    <TextView
        android:id="@+id/mine_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/mine_about"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="联系我们"
        android:textColor="@drawable/textview_background"
        android:textSize="@dimen/dp_14" />

    <View
        android:id="@+id/divided_line4"
        android:layout_below="@id/mine_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#CCCCCC"/>

    <Button
        android:id="@+id/logout"
        android:textColor="#fff"
        android:textSize="@dimen/dp_16"
        android:text="退     出"
        android:layout_below="@id/divided_line4"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/button_boder"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>