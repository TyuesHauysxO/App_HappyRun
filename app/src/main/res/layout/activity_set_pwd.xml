<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetPwdActivity">

    <EditText
        android:id="@+id/enteruser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="\u3000输入用户名"
        android:maxLines="1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_boder"
        />

    <EditText
        android:id="@+id/enterpwd"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enteruser"
        android:layout_marginTop="40dp"
        android:hint="\u3000输入新密码"
        android:maxLines="1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_boder"
        />

    <EditText
        android:id="@+id/enterpwd2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enterpwd"
        android:layout_marginTop="40dp"
        android:hint="\u3000确认密码"
        android:maxLines="1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_boder"
        />

    <Button
        android:id="@+id/set_pwd"
        android:text="确认修改"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enterpwd2"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_boder"
        android:textColor="#fff"
        android:textSize="18dp"
        />

</RelativeLayout>